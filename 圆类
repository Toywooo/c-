//设计一个圆类，求圆的周长
#include<iostream>
using namespace std;
#include<string>
//const double PI=3.14;
static double PI=3.14;


class circle 
{
public:
	int m_r;//属性：半径
	double calculateZC()//行为：计算周长
	{
		return 2 * PI * m_r;
	}
};

int main()
{
	circle c1;//通过圆类，创建具体的圆c1
	c1.m_r=10;
	double ret=c1.calculateZC();
	cout<<"圆的周长为："<<ret<<endl;

	system("pause");
	return 0;
} 
